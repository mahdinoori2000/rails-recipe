<p style="color: green"><%= notice %></p>

<h1 class="mb-5 text-center">Foods</h1>
<div class="tab-content d-flex justify-content-center">
  <div class="tab-pane fade show active border rounded p-5" style="width: 57%" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
    <div id="foods">
      <div class="d-flex justify-content-end">
        <%= link_to "Add food", add_food_path, class: "fs-6 btn btn-primary me-4 mb-4" %>
      </div>
      <table id='foods_table' class="table">
        <thead class="thead-light">
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Measurement unit</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
          </tr>
        </thead>

        <tbody>
          <% @foods.each do |food| %>
            <tr>
              <td><%= food.name%></td>
              <td><%= food.quantity%></td>
              <td><%= food.measurement_unit%></td>
              <td>$ <%= food.price%></td>
              <td><%= link_to "Delete", delete_food_path(food.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
